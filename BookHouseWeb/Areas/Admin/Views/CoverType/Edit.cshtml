@model CoverType

<form method="post">
    <div class="row">
        <h3 class="text-light">Update CoverType</h3>
    </div>
    @*<div asp-validation-summary="All"></div>*@
    <div class="mt-4 p-3">
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
